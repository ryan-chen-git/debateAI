{
  "name": "debate-app",
  "version": "2.0.0",
  "description": "A unified 1v1 debate application with an LLM judge that enforces strict word caps.",
  "main": "unified-server.ts",
  "scripts": {
    "dev": "npm run build:client && npm run start:server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "tsc unified-server.ts --outDir dist --target es2020 --module commonjs --esModuleInterop --resolveJsonModule --skipLibCheck",
    "start": "npm run build && node dist/unified-server.js",
    "start:server": "ts-node unified-server.ts",
    "start:dev": "npm run dev",
    "stop": "npx kill-port 3000 || echo Server stopped",
    "status": "curl -s http://localhost:3000/api/ping >/dev/null && echo '✅ Server Running' || echo '❌ Server Down'",
    "open": "open http://localhost:3000",
    "clean": "rm -rf dist client/build",
    "test": "echo 'No tests specified'"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^16.18.126",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "debate",
    "ai",
    "llm",
    "gemini",
    "typescript",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "kill-port": "^2.0.1"
  }
}
